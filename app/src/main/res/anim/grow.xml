	</alpha>      -->

	<scale
		android:pivotX="50%"
		android:pivotY="50%"
		android:fromXScale="0.5"
		android:fromYScale="0.5"
		android:toXScale="3.5"
		android:toYScale="3.5"
		android:duration="1000"
		android:repeatMode="restart"
		android:repeatCount="3"/>
